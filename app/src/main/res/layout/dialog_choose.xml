<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:theme="@style/MyDialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@color/colorWhite"
    tools:context="com.example.ivan.menumanager.fragments.ChooseFragment"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/add_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="60dp"
            android:paddingRight="60dp"
            android:background="@drawable/round_corner_shape_blue_grey"
            android:textColor="@color/colorWhite" />

        <LinearLayout
            android:id="@+id/animated_dropdown_views"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/item_edit"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:inputType="textCapSentences"
                android:textAlignment="center"
                android:textColor="@color/colorAppleRed"
                android:textColorHint="@color/colorBlue_grey_dark"
                android:backgroundTint="@color/colorBone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
             >

                <Button
                    android:id="@+id/ok_button"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/round_corner_shape_bone"
                    android:text="@string/add_button"
                    android:textColor="@color/colorBlue_grey_dark"/>

                <Button
                    android:id="@+id/cancel_button"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/round_corner_shape_bone"
                    android:text="@string/cancel_button"
                    android:textColor="@color/colorBlue_grey_dark"/>
            </LinearLayout>
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/choose_item_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="@android:dimen/thumbnail_width"
            android:layout_marginTop="15dp"
            ></android.support.v7.widget.RecyclerView>
    </LinearLayout>


</LinearLayout>
