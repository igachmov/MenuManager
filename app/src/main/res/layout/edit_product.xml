<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:theme="@style/MyDialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@color/colorWhite"
    tools:context="com.example.ivan.menumanager.fragments.ChooseFragment"
    android:orientation="vertical">

    <TextView
        android:id="@+id/new_product_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="5dp"
        android:text="edit"
        android:textSize="20sp"
        android:gravity="center"
        android:background="@drawable/z_round_corner_shape_blue_grey"
        android:textColor="@color/colorWhite" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">


        <EditText
            android:id="@+id/qunatity_edit"
            android:layout_width="0dp"
            android:layout_weight="0.7"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:hint="quantity"
            android:textSize="17sp"
            android:textAlignment="center"
            android:backgroundTint="@color/colorBlue_grey_dark"
            android:textColor="@color/colorBlue_grey_dark"
            android:textColorHint="@color/colorBlue_grey_dark"/>

        <Spinner
            android:id="@+id/measure_spin"
            android:layout_width="0dp"
            android:layout_marginLeft="60dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:dropDownSelector="@color/colorBlue_grey_dark"
            android:textColor="@color/colorBlue_grey_dark" ></Spinner>

    </LinearLayout>

    <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

            <Spinner
                android:id="@+id/category_spin"
                android:layout_width="0dp"
                android:layout_weight="1.4"
                android:layout_height="wrap_content"
                android:dropDownSelector="@color/colorBlue_grey_dark"
                android:textColor="@color/colorBlue_grey_dark" ></Spinner>

        <Spinner
            android:id="@+id/expiry_spin"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:dropDownSelector="@color/colorBlue_grey_dark"
            android:textColor="@color/colorBlue_grey_dark" ></Spinner>
            </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">

        <Button
            android:id="@+id/remove_product"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:background="@drawable/z_round_corner_shape_bone"
            android:text="Remove"
            android:textSize="13dp"
            android:textColor="@color/colorBlue_grey_dark" />

        <Button
            android:id="@+id/update_product"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:background="@drawable/z_round_corner_shape_bone"
            android:text="Update"
            android:textSize="13dp"
            android:textColor="@color/colorBlue_grey_dark" />
    </LinearLayout>


        <Button
            android:id="@+id/check_shopping_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:background="@drawable/z_round_corner_shape_bone"
            android:text="Check shopping lists"
            android:textSize="13dp"
            android:textColor="@color/colorBlue_grey_dark" />

        <Button
            android:id="@+id/cancel_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingLeft="105dp"
            android:paddingRight="105dp"
            android:background="@drawable/z_round_corner_shape_bone"
            android:text="Cancel"
            android:textSize="13dp"
            android:textColor="@color/colorBlue_grey_dark" />



</LinearLayout>
